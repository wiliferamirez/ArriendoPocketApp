<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArriendoPocketApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ArriendoPocketApp"
    xmlns:views="clr-namespace:ArriendoPocketApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ArriendoPocketApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Route="login" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="register" ContentTemplate="{DataTemplate views:RegisterPage}" />
    <ShellContent Route="propiedades" ContentTemplate="{DataTemplate views:PropiedadesPage}" />
    <ShellContent Route="crearpropiedad" ContentTemplate="{DataTemplate views:AgregarPropiedadPage}" />





</Shell>
