<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArriendoPocketApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ArriendoPocketApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ArriendoPocketApp">


    <ShellContent
      Route="login"
      ContentTemplate="{DataTemplate views:LoginPage}"
      Shell.NavBarIsVisible="False" />
    <ShellContent
      Route="register"
      ContentTemplate="{DataTemplate views:RegisterPage}"
      Shell.NavBarIsVisible="False" />


    <TabBar>

        <Tab Title="Propiedades" Icon="propiedades_icon.png">
            <ShellContent
          Title="Mis Propiedades"
          Route="propiedades"
          ContentTemplate="{DataTemplate views:PropiedadesPage}" />
            <ShellContent
          Title="Nueva"
          Route="crearpropiedad"
          ContentTemplate="{DataTemplate views:AgregarPropiedadPage}" />
        </Tab>

        <Tab Title="Logs" Icon="logs_icon.png">
            <ShellContent
          Title="Visor de Logs"
          Route="logs"
          ContentTemplate="{DataTemplate views:LogsPage}" />
        </Tab>

    </TabBar>
</Shell>
