<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ArriendoPocketApp.Views.LogsPage"
    Title="Visor de Logs"
    BackgroundColor="White">

    <CollectionView
        ItemsSource="{Binding Logs}"
        RemainingItemsThreshold="1"
        RemainingItemsThresholdReachedCommand="{Binding LoadLogsCommand}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" CornerRadius="8" HasShadow="True">
                    <StackLayout>
                        <Label
                            Text="{Binding Timestamp, StringFormat='{0:yyyy-MM-dd HH:mm:ss}'}"
                            FontAttributes="Bold"
                            FontSize="12" />
                        <Label Text="{Binding Level}" FontSize="12" />
                        <Label Text="{Binding Message}" FontSize="14" />
                        <Label
                            Text="{Binding Endpoint}"
                            FontSize="12"
                            TextColor="Gray" />
                        <Label
                            Text="{Binding Payload}"
                            FontSize="10"
                            TextColor="DarkGray"
                            LineBreakMode="TailTruncation" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>