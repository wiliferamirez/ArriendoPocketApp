<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArriendoPocketApp.Views.LoginPage"
             BackgroundColor="White"
             Title="Iniciar Sesión"
             xmlns:vm="clr-namespace:ArriendoPocketApp.ViewModels">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <Label Text="Bienvenido de nuevo 👋"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Label Text="Ingresa tus credenciales para continuar"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Correo electrónico"
                   Text="{Binding Correo}"
                   Keyboard="Email"
                   ClearButtonVisibility="WhileEditing"
                   BackgroundColor="#F0F0F0"
                   HeightRequest="50"
                   Margin="0,10,0,0"
                   
                    />

            <Entry Placeholder="Contraseña"
                   Text="{Binding Contrasena}"
                   IsPassword="True"
                   ClearButtonVisibility="WhileEditing"
                   BackgroundColor="#F0F0F0"
                   HeightRequest="50"
                   Margin="0"
                   
                   />

            <CheckBox IsChecked="{Binding Recordarme}" />
            <Label Text="Recordarme"
                   VerticalOptions="Center"
                   TextColor="Black"
                   FontSize="14" />

            <Button Text="Iniciar Sesión"
                    TextColor="White"
                    BackgroundColor="Black"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Command="{Binding LoginCommand}" />
            <Label Text="¿No tienes cuenta?"
           FontSize="14"
           TextColor="Gray"
           HorizontalOptions="Center" />

            <Button Text="Regístrate aquí"
            FontSize="14"
            TextColor="Black"
            BackgroundColor="Transparent"
            Command="{Binding IrARegistroCommand}" />

            <Label Text="{Binding Mensaje}"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HayError}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
